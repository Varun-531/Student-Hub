<body>
    <header>
        <h1>Confirmation Page</h1>
    </header>

    <section>
        <h2 class="ms-4" style="font-weight: bolder;margin: 10px 0px 10px 0px;">Internship Details</h2>
        <ul class="internship-details-container" style="text-decoration: none !important;">
            <li class="internship-details lii" style="list-style: none;">
                <strong style="font-size: 40px"> <%= internship.Title %> </strong><br />
                <p>
                    <strong>Description:</strong>
                    <%= internship.Description %>
                </p>
                <p>
                    <strong>Location:</strong>
                    <%= internship.Location %>
                </p>
                <p>
                    <strong>Start Date:</strong>
                    <%= internship.StartDate %>
                </p>
                <p>
                    <strong>End Date:</strong>
                    <%= internship.EndDate %>
                </p>

                <form method="post" action="/confirm-internship/<%= internshipId %>" id="confirmationForm">


                    <button class="btn btn-primary m-3 fw-semibold conf"
                        style="background-color: #2f2e41; border: none; margin-top:5px !important;"
                        type="submit">Confirm</button>
                </form>
            </li>
        </ul>
    </section>

</body>

