<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link rel="stylesheet" href="./css/style.css" />
    <meta name="userid" content="<%= userid %>" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>

  <body id="back">
    <header>
      <h1>Student Hub</h1>
      <% if (user) { %>
      <p>Hello, <%= user.FirstName %> <%= user.LastName %>!</p>
      <% if (user.isAdmin) { %>
      <p>Admin ğŸª¦</p>
      <a href="/Internship-Page">Create Internship</a>
      <% } else { %>
      <p>StudentğŸ§‘â€ğŸ“</p>
      <a href="/applied-internships">Applied Internships</a>
      <% } %> <% if (!user) { %>
      <script>
        window.location.href = "/login";
      </script>
      <% } %>
      <form action="/logout" method="post">
        <button type="submit" class="btn btn-primary m-3 fw-semibold" style="background-color: #2f2e41; border: none;">Logout</button>
      </form>
      <% } else { %>
      <p>No User</p>
      <% } %>
    </header>
    <section class="ms-5 inte">
      <h2 class="fs-2 h2">Available Internships</h2>
      <% internships.forEach((internship) => { %>
      <div class="p-3 mb-2 bg-dark-subtle text-emphasis-dark internship rounded">
        <h3><%= internship.Title %></h3>
        <p><%= internship.Description %></p>
        <p>Start Date: <%= internship.StartDate %></p>
        <!-- <p>End Date: <%= internship.EndDate %></p> -->
        <p>Location: <%= internship.Location %></p>
        <% const startDate = new Date(internship.StartDate); const endDate = new
        Date(internship.EndDate); const durationInMonths = Math.round((endDate -
        startDate) / (30 * 24 * 60 * 60 * 1000)); %>
        <p>Duration: <%= durationInMonths %> months</p>
        <% if (user && user.isAdmin) { %>
        <!-- Code visible only to admins -->
        <!-- create a button that takes me to "/internshipDelete/<%= internship.id %>" on clicking -->
        <a href="/internshipDelete/<%= internship.id %>">Delete</a>
        <% } %>
        <% if (user && !user.isAdmin) { %>
        <!-- Code visible only to students -->
        <a id="join" href="/confirmation/<%= internship.id %>">Join</a>
        <% } %>
      </div>
      <% }); %>
    </section>
    <footer class="fs-4">
      <p>&copy; <%= year %> <%= title %>. All rights reserved.</p>
    </footer>
  </body>
</html>
