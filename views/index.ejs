<!-- index.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="./css/style.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  </head>

  <body>
    <header>
      <h1><%= title %></h1>
      <p><%= slogan %></p>
      <button
        type="button"
        onclick="window.location.href='/login-page'"
        class="login-button btn btn-primary"
      >
        Login
      </button>
      <button
        type="button"
        onclick="window.location.href='/signup-page'"
        class="signup-button btn btn-primary"
      >
        Signup
      </button>
    </header>

    <section><%- include('layout.ejs') %></section>

    <footer class="fs-4">
      <p>&copy; <%= year %> <%= title %>. All rights reserved.</p>
    </footer>
  </body>
</html>
