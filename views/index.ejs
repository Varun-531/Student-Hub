<!-- index.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link href="./css/style.css" rel="stylesheet" />
  </head>
  <body>
    <header>
      <h1><%= title %></h1>
      <p><%= slogan %></p>
      <button
        type="button"
        onclick="window.location.href='/login-page'"
        class="login-button"
      >
        Login
      </button>
      <button
        type="button"
        onclick="window.location.href='/signup-page'"
        class="signup-button"
      >
      Signup
      </button>
    </header>

    <section><%- include('layout.ejs') %></section>

    <footer>
      <p>&copy; <%= year %> <%= title %>. All rights reserved.</p>
    </footer>
  </body>
</html>
